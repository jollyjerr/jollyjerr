		"prettier-plugin-tailwindcss": "^0.6.8",
		"showdown": "^2.1.0",
		"svelte": "^5.1.9",
		"svelte-check": "^4.0.5",
		"svelte-preprocess": "^6.0.3",
		"tailwindcss": "^3.4.14",
		"tslib": "^2.8.1",
		"typescript": "^5.6.3",
		"vite": "^5.4.10"
	},
	"dependencies": {
		"@notree/ui": "^0.3.0",
		"algoliasearch": "^5.12.0",
		"date-fns": "^4.1.0",
		"highlight.js": "^11.10.0"
	}
