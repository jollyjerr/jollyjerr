		"svelte": "^4.2.12",
		"svelte-check": "^3.6.8",
		"svelte-preprocess": "^5.1.3",
		"tailwindcss": "^3.4.1",
		"tslib": "^2.6.2",
		"typescript": "~5.4.3",
		"vite": "^5.2.4"
	},
	"dependencies": {
		"@notree/ui": "^0.3.0",
		"algoliasearch": "^4.22.1",
		"date-fns": "^3.6.0",
		"highlight.js": "^11.9.0"
	}
